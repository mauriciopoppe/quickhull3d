{
  "compilerOptions": {
    "target": "esnext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.d.ts"],
  "exclude": ["src/stories/**/*"]
}
